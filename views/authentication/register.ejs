
<html dir="rtl" lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/login-register.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <div class="container-fluid">
        <body class="login-register-body">
            <div class="containerr">
                <section class="login-box">
                    <div class="sinematicket-img mb-4">
                        <img src="https://cinematicket.org/v3.13.8/assets/images/typo_logo.svg" alt="" />
                    </div>
                    <div class="login">
                        <div class="d-flex">
                            <div class="">
                                <% if(errors.length){ %>
                                    <div>
                                        <ul class="alert alert-danger">
                                           <% errors.forEach(err=>{ %>
                                                <li ><%= err.msg %></li>
                                           <% }) %>
                                        </ul>
                                    </div>
                                <% } %>
                                <span class="fw-bold ">ایجاد حساب کاربری</span>
                                <form action="/auth/register" method="post" class="mt-3">
                                    <div class="mb-3">
                                        <label htmlFor="exampleInputEmail1" class="form-label">آدرس ایمیل :</label>
                                        <input type="email" name="email" class="form-control" id="exampleInputEmail1" />
                                    </div>
                                    <% if(message){ %>
                                        <p class="text-danger"><%= message %></p>
                                    <% } %>
                                    <div class="mb-3">
                                        <label htmlFor="exampleInputusername" class="form-label">نام کاربری :</label>
                                        <input type="text" name="username" class="form-control" id="exampleInputusername" />
                                    </div>
                                    <div class="mb-3">
                                        <label htmlFor="exampleInputphone_number" class="form-label">شماره موبایل :</label>
                                        <input type="tel" name="phone_number" class="form-control" id="exampleInputphone_number" />
                                    </div>
                                    <div class="mb-3">
                                        <label htmlFor="exampleInputPassword1" class="form-lable">کلمه عبور :</label>
                                        <input type="password" name="password" class="form-control" id="exampleInputPassword1" />
                                    </div>
                                        <button type="submit" class="btn btn-danger"><span class="mx-3">ثبت نام</span></button>
                                        <span>
                                        <a class="btn btn-danger" href="/">بازگشت به صفحه اصلی</a>
                                        </span>
                                        
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="login-svg">
                        <img src="/images/login&register/login.svg" alt="" />
                    </div>

                </section>
            </div>
        </body>
    </div>
</body>
</html>