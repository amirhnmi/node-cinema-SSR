<html lang="en" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/login-register.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <div class="container-fluid">
        <body class="login-register-body">
            <div class="containerr">
                <section class="login-box">
                    <div class="sinematicket-img mb-4">
                        <img src="https://cinematicket.org/v3.13.8/assets/images/typo_logo.svg" alt="" />
                    </div>
                    <div class="login">
                        <div class="d-flex">
                            <div class="">
                                <span class="fw-bold ">پسورد جدید را وارد کنید</span>
                                <form action="/auth/change_password" method="post" >
                                    <div class="mt-3">
                                        <div class="mb-3">
                                            <input type="hidden" name="token" value="<%= token %>">
                                            <label  class="form-label"> پسورد جدید :</label>
                                            <input type="password" name="password" class="form-control" />
                                        </div>
                                        <input type="submit" class="btn btn-danger" value="ارسال">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="login-svg">
                        <img src="images/login&register/login.svg" alt="" />
                    </div>

                    <div class="comeback-to-home">
                        <a href="/"><button type="submit" class="btn btn-danger">بازگشت به صفحه اصلی</button></a>
                    </div>
                </section>
            </div>
        </body>
    </div>
</body>
</html>